{
    "id": "io.github.kotatogram",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kotatogram-desktop",
    "rename-icon": "kotatogram",
    "finish-args": [ "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--socket=pulseaudio",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications",
                     "--talk-name=org.freedesktop.ScreenSaver",
                     "--talk-name=org.gnome.Mutter.IdleMonitor",
                     "--talk-name=com.canonical.Unity",
                     "--talk-name=com.canonical.indicator.application",
                     "--talk-name=org.ayatana.indicator.application",
                     "--talk-name=org.freedesktop.portal.Fcitx",
                     "--filesystem=xdg-download",
                     "--device=all" ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "20.08",
            "autodownload": true,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [ "/cache",
                 "/man",
                 "/share/man",
                 "/lib/systemd",
                 "/include",
                 "/lib/pkgconfig",
                 "/lib/cmake",
                 "*.la", "*.a"],
    "modules": [
        {
            "name": "yasm",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz",
                    "sha256": "3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f"
                }
            ],
            "cleanup": [ "*" ]
        },
        {
            "name": "tg_owt",
            "only-arches": [
                "x86_64"
            ],
            "buildsystem": "cmake-ninja",
            "no-make-install": true,
            "build-commands": [
                "mkdir -p /app/src/tg_owt",
                "cp -a . /app/src/tg_owt",
                "sed 's|/run/build|/app/src|g' -i /app/src/tg_owt/tg_owtTargets.cmake"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/desktop-app/tg_owt.git",
                    "commit": "b77bc3a727cb24969eafa4d69a2f396f322f4f6f"
                }
            ],
            "cleanup": [ "*" ]
        },
        {
            "name": "kotatogram-desktop",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "build-options": {
                "env": {
                    "tg_owt_DIR": "/app/src/tg_owt"
                }
            },
            "config-opts": [
                "-DTDESKTOP_API_ID=1096745",
                "-DTDESKTOP_API_HASH=d91b15bd9ad1d7cdda32345a9361586b",
                "-DDESKTOP_APP_USE_PACKAGED_LAZY=ON",
                "-DDESKTOP_APP_USE_PACKAGED_LAZY_PLATFORMTHEMES=OFF",
                "-DTDESKTOP_LAUNCHER_BASENAME=io.github.kotatogram"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kotatogram/kotatogram-desktop.git",
                    "tag": "k1.3.9",
                    "commit": "43111207ed3cbd714119ab69d51640a455fb0af7"
                }
            ]
        }
    ]
}
